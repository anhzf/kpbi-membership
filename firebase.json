{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 8000
    },
    "firestore": {
      "port": 8001
    },
    "ui": {
      "enabled": true
    },
    "auth": {
      "port": 8002
    },
    "storage": {
      "port": 8003
    }
  }
}
